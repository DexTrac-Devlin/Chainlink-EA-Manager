#!/bin/bash

source api_keys
source misc_vars

docker run \
 --name eth-balance-redis \
 --restart=unless-stopped \
 --net eas-net \
 --link redis-cache \
 --ip 192.168.2.48 \
 -p 2048:2048 \
 -e EA_PORT=2048 \
 -e AVALANCHE_RPC_URL=$AVALANCHE_RPC_URL \
 -e AVALANCHE_RPC_CHAIN_ID=$AVALANCHE_CHAIN_ID \
 -e BERACHAIN_RPC_URL=$BERACHAIN_RPC_URL \
 -e BERACHAIN_RPC_CHAIN_ID=$BERACHAIN_CHAIN_ID \
 -e BITLAYER_RPC_URL=$BITLAYER_RPC_URL \
 -e BITLAYER_RPC_CHAIN_ID=$BITLAYER_CHAIN_ID \
 -e BSQUARED_RPC_URL=$BSQUARED_RPC_URL \
 -e BSQUARED_RPC_CHAIN_ID=$BSQUARED_CHAIN_ID \
 -e ETHEREUM_CHAIN_ID=$ETHEREUM_CHAIN_ID \
 -e ETHEREUM_RPC_URL=$ETHEREUM_RPC_URL \
 -e HYPERLIQUID_RPC_URL=$HYPERLIQUID_RPC_URL \
 -e HYPERLIQUID_RPC_CHAIN_ID=$HYPERLIQUID_CHAIN_ID \
 -e INK_RPC_URL=$INK_RPC_URL \
 -e INK_RPC_CHAIN_ID=$INK_CHAIN_ID \
 -e MERLIN_RPC_URL=$MERLIN_RPC_URL \
 -e MERLIN_RPC_CHAIN_ID=$MERLIN_CHAIN_ID \
 -e ROOTSTOCK_RPC_URL=$ROOTSTOCK_RPC_URL \
 -e ROOTSTOCK_RPC_CHAIN_ID=$ROOTSTOCK_CHAIN_ID \
 -e TIMEOUT=60000 \
 -e CACHE_ENABLED=true \
 -e CACHE_TYPE=redis \
 -e CACHE_KEY_GROUP=eth-balance \
 -e CACHE_KEY_IGNORED_PROPS=meta \
 -e CACHE_REDIS_HOST="192.168.1.1" \
 -e CACHE_REDIS_PORT=6379 \
 -e RATE_LIMIT_ENABLED=true \
 -e REQUEST_COALESCING_ENABLED=true \
 -e REQUEST_COALESCING_INTERVAL=100 \
 -e REQUEST_COALESCING_INTERVAL_MAX=1000 \
 -e REQUEST_COALESCING_INTERVAL_COEFFICIENT=2 \
 -e REQUEST_COALESCING_ENTROPY_MAX=0 \
 -e LOG_LEVEL=info \
 -e DEBUG=false \
 -e API_VERBOSE=false \
 -e EXPERIMENTAL_METRICS_ENABLED=true \
 -e METRICS_NAME=eth-balance \
 -e RETRY=1 \
 -l prometheus-scrape.enabled=true \
 -l prometheus-scrape.job_name="eth-balance-redis" \
 -l prometheus-scrape.port=9080 \
 -l prometheus-scrape.metrics_path="/metrics" \
 -d public.ecr.aws/chainlink/adapters/eth-balance-adapter:$1
