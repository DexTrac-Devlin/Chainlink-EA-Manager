#!/bin/bash

# Source configuration files with absolute paths to ensure they work regardless of where the script is called from
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
repo_root="$(cd "${script_dir}/.." && pwd)"

source "${repo_root}/api_keys"
source "${repo_root}/misc_vars"
docker run \
 --name crypto-volatility-multi--mainnet \
 --restart=unless-stopped \
 --net eas-net \
 --link redis-cache \
 --ip 192.168.1.156 \
 -p 1156:1156 \
 -e EA_PORT=1156 \
 -e AMBERDATA_ADAPTER_URL=http://192.168.1.208:1208 \
 -e COINAPI_ADAPTER_URL=http://192.168.1.112:1112 \
 -e COINGECKO_ADAPTER_URL=http://192.168.1.113:1113 \
 -e COINMARKETCAP_ADAPTER_URL=http://192.168.1.115:1115 \
 -e COINPAPRIKA_ADAPTER_URL=http://192.168.1.116:1116 \
 -e CRYPTOCOMPARE_ADAPTER_URL=http://192.168.1.114:1114 \
 -e NOMICS_ADAPTER_URL=http://192.168.1.111:1111 \
 -e TIINGO_ADAPTER_URL=http://192.168.1.134:1134 \
 -e RPC_URL=$RPC_URL \
 -e ETHEREUM_RPC_URL=$ETHEREUM_RPC_URL \
 -e TIMEOUT=30000 \
 -e CACHE_ENABLED=true \
 -e CACHE_TYPE=redis \
 -e CACHE_KEY_GROUP=cryptoVolatility-multi \
 -e CACHE_REDIS_HOST="192.168.1.1" \
 -e CACHE_REDIS_PORT=6379 \
 -e CACHE_REDIS_TIMEOUT=30000 \
 -e REQUEST_COALESCING_ENABLED=false \
 -e REQUEST_COALESCING_INTERVAL=100 \
 -e REQUEST_COALESCING_INTERVAL_MAX=1000 \
 -e REQUEST_COALESCING_INTERVAL_COEFFICIENT=2 \
 -e REQUEST_COALESCING_ENTROPY_MAX=0 \
 -e LOG_LEVEL=info \
 -e DEBUG=false \
 -e API_VERBOSE=false \
 -e EXPERIMENTAL_METRICS_ENABLED=true \
 -e METRICS_NAME=crypt-volatility -ethereum \
 -e RETRY=1 \
 -l prometheus-scrape.enabled=true \
 -l prometheus-scrape.job_name="crypto-volatility-multi-redis" \
 -l prometheus-scrape.port=9080 \
 -l prometheus-scrape.metrics_path="/metrics" \
 -d public.ecr.aws/chainlink/adapters/crypto-volatility-index-adapter:$1
