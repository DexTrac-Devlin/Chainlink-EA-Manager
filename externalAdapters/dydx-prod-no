#!/bin/bash

# Source configuration files with absolute paths to ensure they work regardless of where the script is called from
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
repo_root="$(cd "${script_dir}/.." && pwd)"

source "${repo_root}/api_keys"
source "${repo_root}/misc_vars"
docker run \
 --name dydx-prod-no-redis \
 --restart=unless-stopped \
 --ip 192.168.1.239 \
 -p 2239:8080 \
 -e TIMEOUT=60000 \
 -e PRIVATE_KEY=$DYDX_PRIVATE_KEY \
 -e STARK_MESSAGE=$DYDX_STARK_MESSAGE \
 -e ORACLE_NAME=$DYDX_ORACLE_NAME \
 -e API_ENDPOINT=$DYDX_PROD_API_ENDPOINT \
 -e CACHE_ENABLED=false \
 -e RATE_LIMIT_ENABLED=false \
 -e WARMUP_ENABLED=false \
 -e LOG_LEVEL=info \
 -e DEBUG=false \
 -e API_VERBOSE=false \
 -e RETRY=1 \
 -d dextrac/dydx-stark-adapter:$1
