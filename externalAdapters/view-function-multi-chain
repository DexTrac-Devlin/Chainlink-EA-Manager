#!/bin/bash

# Source configuration files with absolute paths to ensure they work regardless of where the script is called from
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
repo_root="$(cd "${script_dir}/.." && pwd)"

source "${repo_root}/api_keys"
source "${repo_root}/misc_vars"
docker run \
 --name view-function-multi-chain-redis \
 --restart=unless-stopped \
 --net eas-net \
 --link redis-cache \
 --ip 192.168.2.35 \
 -p 2035:2035 \
 -e EA_PORT=2035 \
 -e ARBITRUM_RPC_URL=$ARBITRUM_RPC_URL \
 -e ARBITRUM_CHAIN_ID=$ARBITRUM_CHAIN_ID \
 -e AVALANCHE_RPC_URL=$AVALANCHE_RPC_URL \
 -e AVALANCHE_CHAIN_ID=$AVALANCHE_CHAIN_ID \
 -e BASE_RPC_URL=$BASE_RPC_URL \
 -e BASE_CHAIN_ID=$BASE_CHAIN_ID \
 -e BINANCESMARTCHAIN_RPC_URL=$BINANCESMARTCHAIN_RPC_URL \
 -e BINANCESMARTCHAIN_CHAIN_ID=$BINANCESMARTCHAIN_CHAIN_ID \
 -e ETHEREUM_RPC_URL=$ETHEREUM_RPC_URL \
 -e ETHEREUM_CHAIN_ID=$ETHEREUM_CHAIN_ID \
 -e FANTOM_RPC_URL=$FANTOM_RPC_URL \
 -e FANTOM_CHAIN_ID=$FANTOM_CHAIN_ID \
 -e GNOSIS_RPC_URL=$GNOSIS_RPC_URL \
 -e GNOSIS_CHAIN_ID=$GNOSIS_CHAIN_ID \
 -e HARMONY_RPC_URL=$HARMONY_RPC_URL \
 -e HARMONY_CHAIN_ID=$HARMONY_CHAIN_ID \
 -e HECO_RPC_URL=$HECO_RPC_URL \
 -e HECO_CHAIN_ID=$HECO_CHAIN_ID \
 -e MOONBEAM_RPC_URL=$MOONBEAM_RPC_URL \
 -e MOONBEAM_CHAIN_ID=$MOONBEAM_CHAIN_ID \
 -e MOONRIVER_RPC_URL=$MOONRIVER_RPC_URL \
 -e MOONRIVER_CHAIN_ID=$MOONRIVER_CHAIN_ID \
 -e OPTIMISM_RPC_URL=$OPTIMISM_RPC_URL \
 -e OPTIMISM_CHAIN_ID=$OPTIMISM_CHAIN_ID \
 -e POLYGON_RPC_URL=$POLYGON_RPC_URL \
 -e POLYGON_CHAIN_ID=$POLYGON_CHAIN_ID \
 -e SCROLL_RPC_URL=$SCROLL_RPC_URL \
 -e SCROLL_CHAIN_ID=$SCROLL_CHAIN_ID \
 -e SOLANA_RPC_URL=$SOLANA_RPC_URL \
 -e SOLANA_CHAIN_ID=$SOLANA_CHAIN_ID \
 -e XDAI_RPC_URL=$XDAI_RPC_URL \
 -e XDAI_CHAIN_ID=$XDAI_CHAIN_ID \
 -e TIMEOUT=30000 \
 -e CACHE_ENABLED=true \
 -e CACHE_TYPE=redis \
 -e CACHE_KEY_GROUP=viewFunction-multi-chain \
 -e CACHE_KEY_IGNORED_PROPS=meta \
 -e CACHE_REDIS_HOST="192.168.1.1" \
 -e CACHE_REDIS_PORT=6379 \
 -e REQUEST_COALESCING_ENABLED=false \
 -e REQUEST_COALESCING_INTERVAL=100 \
 -e REQUEST_COALESCING_INTERVAL_MAX=1000 \
 -e REQUEST_COALESCING_INTERVAL_COEFFICIENT=2 \
 -e REQUEST_COALESCING_ENTROPY_MAX=0 \
 -e LOG_LEVEL=info \
 -e DEBUG=false \
 -e API_VERBOSE=false \
 -e EXPERIMENTAL_METRICS_ENABLED=true \
 -e METRICS_NAME=view-function-multi-chain \
 -e RETRY=1 \
 -l prometheus-scrape.enabled=true \
 -l prometheus-scrape.job_name="view-function-multi-chain-redis" \
 -l prometheus-scrape.port=9080 \
 -l prometheus-scrape.metrics_path="/metrics" \
 -d public.ecr.aws/chainlink/adapters/view-function-multi-chain-adapter:$1
