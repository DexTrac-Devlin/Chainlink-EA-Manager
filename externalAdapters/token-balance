#!/bin/bash

source api_keys
source misc_vars

docker run \
 --name token-balance-redis \
 --restart=unless-stopped \
 --net eas-net \
 --link redis-cache \
 --ip 192.168.2.59 \
 -p 2059:2059 \
 -e EA_PORT=2059 \
 -e TIMEOUT=60000 \
 -e ARBITRUM_RPC_URL=$ARBITRUM_RPC_URL \
 -e ARBITRUM_RPC_CHAIN_ID=$ARBITRUM_CHAIN_ID \
 -e AVALANCHE_RPC_URL=$AVALANCHE_RPC_URL \
 -e AVALANCHE_RPC_CHAIN_ID=$AVALANCHE_CHAIN_ID \
 -e BASE_RPC_URL=$BASE_RPC_URL \
 -e BASE_RPC_CHAIN_ID=$BASE_CHAIN_ID \
 -e BSC_RPC_URL=$BSC_RPC_URL \
 -e BSC_RPC_CHAIN_ID=$BSC_CHAIN_ID \
 -e BERACHAIN_RPC_URL=$BERACHAIN_RPC_URL \
 -e BERACHAIN_RPC_CHAIN_ID=$BERACHAIN_CHAIN_ID \
 -e BITLAYER_RPC_URL=$BITLAYER_RPC_URL \
 -e BITLAYER_RPC_CHAIN_ID=$BITLAYER_CHAIN_ID \
 -e BSQUARED_RPC_URL=$BSQUARED_RPC_URL \
 -e BSQUARED_RPC_CHAIN_ID=$BSQUARED_CHAIN_ID \
 -e BOB_RPC_URL=$BOB_RPC_URL \
 -e BOB_RPC_CHAIN_ID=$BOB_CHAIN_ID \
 -e ETHEREUM_RPC_URL=$ETHEREUM_RPC_URL \
 -e ETHEREUM_RPC_CHAIN_ID=$ETHEREUM_CHAIN_ID \
 -e LINEA_RPC_URL=$LINEA_RPC_URL \
 -e LINEA_RPC_CHAIN_ID=$LINEA_CHAIN_ID \
 -e MANTLE_RPC_URL=$MANTLE_RPC_URL \
 -e MANTLE_RPC_CHAIN_ID=$MANTLE_CHAIN_ID \
 -e MERLIN_RPC_URL=$MERLIN_RPC_URL \
 -e MERLIN_RPC_CHAIN_ID=$MERLIN_CHAIN_ID \
 -e MODE_RPC_URL=$MODE_RPC_URL \
 -e MODE_RPC_CHAIN_ID=$MODE_CHAIN_ID \
 -e OPTIMISM_RPC_URL=$OPTIMISM_RPC_URL \
 -e OPTIMISM_RPC_CHAIN_ID=$OPTIMISM_CHAIN_ID \
 -e POLYGON_RPC_URL=$POLYGON_RPC_URL \
 -e POLYGON_RPC_CHAIN_ID=$POLYGON_CHAIN_ID \
 -e SOLANA_RPC_URL=$SOLANA_RPC_URL \
 -e ZETA_RPC_URL=$ZETA_RPC_URL \
 -e ZETA_RPC_CHAIN_ID=$ZETA_CHAIN_ID \
 -e SONEIUM_RPC_URL=$SONEIUM_RPC_URL \
 -e SONEIUM_RPC_CHAIN_ID=$SONEIUM_CHAIN_ID \
 -e MORPH_RPC_URL=$MORPH_RPC_URL \
 -e MORPH_RPC_CHAIN_ID=$MORPH_CHAIN_ID \
 -e ROOTSTOCK_RPC_URL=$ROOTSTOCK_RPC_URL \
 -e ROOTSTOCK_RPC_CHAIN_ID=$ROOTSTOCK_CHAIN_ID \
 -e SEI_RPC_URL=$SEI_RPC_URL \
 -e SEI_RPC_CHAIN_ID=$SEI_CHAIN_ID \
 -e XRPL_RPC_URL=$XRPL_RPC_URL \
 -e CACHE_ENABLED=true \
 -e CACHE_TYPE=redis \
 -e CACHE_KEY_GROUP=token-balance \
 -e CACHE_KEY_IGNORED_PROPS=meta \
 -e CACHE_REDIS_HOST="192.168.1.1" \
 -e CACHE_REDIS_PORT=6379 \
 -e REQUEST_COALESCING_ENABLED=true \
 -e REQUEST_COALESCING_INTERVAL=100 \
 -e REQUEST_COALESCING_INTERVAL_MAX=1000 \
 -e REQUEST_COALESCING_INTERVAL_COEFFICIENT=2 \
 -e REQUEST_COALESCING_ENTROPY_MAX=0 \
 -e LOG_LEVEL=info \
 -e DEBUG=false \
 -e API_VERBOSE=false \
 -e EXPERIMENTAL_METRICS_ENABLED=true \
 -e METRICS_NAME=token-balance \
 -e RETRY=1 \
 -l prometheus-scrape.enabled=true \
 -l prometheus-scrape.job_name="token-balance-redis" \
 -l prometheus-scrape.port=9080 \
 -l prometheus-scrape.metrics_path="/metrics" \
 -d public.ecr.aws/chainlink/adapters/token-balance-adapter:$1
